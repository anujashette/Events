                        "Technology","Business","Music","Writing","Sports","Motivational","Concerts","Open mic","Magic",
                        "Mentalism","Circus","Poetry","Stand up comedy","Comedy"]
                },
                "eventLanguage": {
                    "type": "string"
                },
                "audianceAllowedAge": {
                    "type": "Number"
                },
                "eventDuration":{
                    "type": "string"
                },
                "eventStartDate":{
                    "type": "string"
                },
                "eventEndDate":{
                    "type": "string"
                },
                "description":{
                    "type": "string"
                },
                "eventPicture":{
                    "type": "string"
                },
                "eventPrice":{
                    "type": "Number"
                },
                "broadcastPlatform":{
                    "type": "string"
                }
            }
